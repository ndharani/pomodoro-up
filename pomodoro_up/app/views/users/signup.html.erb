<h2> Sign up </h2>

<div class="sign-up-form">
    <%= form_for @user, url: users_path(@user) do |f| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <p><%= f.text_field :username, placeholder: "Username" %></p>
        <p><%= f.text_field :email, placeholder: "Email address" %></p>
        <p><%= f.text_field :password, placeholder: "Password" %></p>
        <p><%= f.submit %></p>
    <% end %>
